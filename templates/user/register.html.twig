{% extends 'base.html.twig' %}
{% block title %}M'inscrire
{% endblock %}
{% block body %}
	<div class="page-user-content">
		<div class="container">
			<div class="title_margin title_margin--user">
				<img class="title_image" src="{{ absolute_url(asset('icones/edit.png')) }}" alt="register_icon"/>
				<h2>M'inscrire</h2>
			</div>
			{{ form_start(form) }}
			{{ include('_flash_message.html.twig') }}
			<p class="form-legend"><em>(*)Champs obligatoires</em><p>
			<div class="field">
				<div class="field-label">
					<img src="{{ absolute_url(asset('icones/location.png'))}}" class="field-icones">
					{{ form_label(form.area) }}
				</div>
				{{ form_widget(form.area) }}
				{{ form_errors(form.area) }}
			</div>
			<div class="field">
				<div class="field-label">
					<img src="{{ absolute_url(asset('icones/email.png'))}}" class="field-icones">
					{{ form_label(form.email) }}
				</div>
				{{ form_widget(form.email) }}
				{{ form_errors(form.email) }}
			</div>
			<div class="field">
				<div class="field-label">
					<img src="{{ absolute_url(asset('images/054-hiker.png'))}}" class="field-icones">
					{{ form_label(form.nickname) }}
				</div>
				{{ form_widget(form.nickname) }}
				{{ form_errors(form.nickname) }}
			</div>
			<div class="field">
				<div class="field-label">
					<img src="{{ absolute_url(asset('images/054-hiker.png'))}}" class="field-icones">
					{{ form_label(form.firstname) }}
				</div>
				{{ form_widget(form.firstname) }}
				{{ form_errors(form.firstname) }}
			</div>
			<div class="field">
				<div class="field-label">
					<img src="{{ absolute_url(asset('images/054-hiker.png'))}}" class="field-icones">
					{{ form_label(form.lastname) }}
				</div>
				{{ form_widget(form.lastname) }}
				{{ form_errors(form.lastname) }}
			</div>
			<div class="field">
				<div class="field-label">
					<img src="{{ absolute_url(asset('icones/padlock.png'))}}" class="field-icones">
					{{ form_label(form.password) }}
				</div>
				{{ form_widget(form.password) }}
				{{ form_errors(form.password) }}
			</div>
			<div class="field">
				<div class="field-label">
					<img src="{{ absolute_url(asset('icones/photograph.png'))}}" class="field-icones">
					{{ form_label(form.imageFile) }}
				</div>
				{{ form_widget(form.imageFile) }}
				{{ form_errors(form.imageFile) }}
			</div>
			<button type="submit" class="field-submit">M'inscrire</button>
			{{ form_end(form) }}
		</div>
	</div>
{% endblock %}
