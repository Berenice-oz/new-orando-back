{% extends 'back/base_back.html.twig' %}

{% block title %}Liste des Randonnées{% endblock %}

{% block body %}



{{ include('back/_nav_back.html.twig') }}

<h3>Liste des Randonnées</h3> 

{{ include('back/_flash_message.html.twig') }}

<table class="table">
    
            
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Titre</th>
      <th scope="col">Description</th>
      <th scope="col">Statut</th>
      
    </tr>
  </thead>
  <tbody>
   
  {% for walk in walksList %}
    <tr>
      <th scope="row">{{ walk.id }}</th>
      <td>{{ walk.title }}</td>
      <td>{{ walk.description }}</td>
      <td>{{ walk.status }}</td>
      <td>
        <a href="{{ path('back_walk_edit', {id:walk.id}) }}" type="button" class="btn btn-warning">Modifier</a>
      </td>
    
           
    </tr>
    
 </tbody>

    {% endfor %}
</table>

{% endblock %}