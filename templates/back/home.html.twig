{% extends 'back/base_back.html.twig' %}

{% block title %}Accueil
{% endblock %}
{% block body %}
	<h1>Administration O'Rando</h1>
	<div class="row pt-5">
		<div class="col-12 col-md-4">
			<div class="card text-white mb-3">
				<div class="card-header card-walks"><h2>Les randonnées<h2></div>
				<div class="card-body">
					<table class="table table-hover">
						<thead>
							<tr>
								<th scope="col">#</th>
								<th scope="col">Titre</th>
								<th scope="col">Date du départ</th>
								<th scope="col"></th>
							</tr>
						</thead>
						<tbody>
							{% for walk in walks %}
								<tr>
									<th scope="row">{{ walk.id }}</th>
									<td>{{ walk.title }}</td>
									<td>{{ walk.date|date("d/m/Y") }}</td>
									<td class="text-right">
										<a href="" class="btn btn-sm btn-warning">
											<i class="fas fa-edit"></i>
										</a>
										<!-- Example single danger button -->
										<div class="btn-group">
											<button type="button" class="btn btn-sm btn-danger dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
												<i class="fas fa-trash-alt"></i>
											</button>
											<div class="dropdown-menu">
												<a class="dropdown-item" href="">Oui, je veux supprimer</a>
												<a class="dropdown-item" href="#" data-toggle="dropdown">Oups !</a>
											</div>
										</div>
									</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
					<a href="{{ path('walk_browse') }}" class="btn btn-block btn-success">Voir plus</a>
				</div>
			</div>
		</div>
		<div class="col-12 col-md-4">
			<div class="card text-white mb-3">
				<div class="card-header card-users"><h2>Les utilisateurs</h2></div>
				<div class="card-body">
					<table class="table table-hover">
						<thead>
							<tr>
								<th scope="col">#</th>
								<th scope="col">Pseudo</th>
								<th scope="col"></th>
							</tr>
						</thead>
						<tbody>
							{% for user in users %}
								<tr>
									<th scope="row">{{ user.id }}</th>
									<td>{{ user.nickname }}</td>
									<td class="text-right">
										<a href="" class="btn btn-sm btn-warning">
											<i class="fas fa-edit"></i>
										</a>
										<!-- Example single danger button -->
										<div class="btn-group">
											<button type="button" class="btn btn-sm btn-danger dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
												<i class="fas fa-trash-alt"></i>
											</button>
											<div class="dropdown-menu">
												<a class="dropdown-item" href="">Oui, je veux supprimer</a>
												<a class="dropdown-item" href="#" data-toggle="dropdown">Oups !</a>
											</div>
										</div>
									</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
					<a href="{{ path('user_browse') }}" class="btn btn-block btn-success">Voir plus</a>
				</div>
			</div>
		</div>
		<div class="col-12 col-md-4">
			<div class="card text-white mb-3">
				<div class="card-header card-tags"><h2>Les tags</h2></div>
				<div class="card-body">
					<table class="table table-hover">
						<thead>
							<tr>
								<th scope="col">#</th>
								<th scope="col">Nom</th>
								<th scope="col"></th>
							</tr>
						</thead>
						<tbody>
							{% for tag in tags %}
								<tr>
									<th scope="row">{{ tag.id }}</th>
									<td>{{ tag.name }}</td>
									<td class="text-right">
										<a href="" class="btn btn-sm btn-warning">
											<i class="fas fa-edit"></i>
										</a>
										<!-- Example single danger button -->
										<div class="btn-group">
											<button type="button" class="btn btn-sm btn-danger dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
												<i class="fas fa-trash-alt"></i>
											</button>
											<div class="dropdown-menu">
												<a class="dropdown-item" href="">Oui, je veux supprimer</a>
												<a class="dropdown-item" href="#" data-toggle="dropdown">Oups !</a>
											</div>
										</div>
									</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
					<a href="{{ path('tag_browse') }}" class="btn btn-block btn-success">Voir plus</a>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
